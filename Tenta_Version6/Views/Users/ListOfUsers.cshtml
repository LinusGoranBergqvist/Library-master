@model List<User>

@{

    foreach (User Item in Model)
    {

        <div class="col-md-3 mb-3">
                <div class="card">
                    <h4 class="card-header" name="UserName">UserName: @Html.DisplayFor(modelItem => Item.Name)</h4>
                    <div class="card-body">
                        <p class="card" name="UserAddress">Address: @Html.DisplayFor(modelItem => Item.Address)</p>
                        <p class="card" name="UserPhoneNumber">Phone Number: @Html.DisplayFor(modelItem => Item.PhoneNumber)</p>
                    </div>
                    <div class="card-footer">
                    <form asp-controller="Users" asp-action="DeleteUser" method="POST">
                        <input hidden name="removeUserId" value="@Item.Id">
                        <td><input type="submit" class="btn btn-danger" value="Remove User"/></td>
                    </form>
                    
                    <a asp-controller="Users" asp-action="EditUser" asp-route-id="@Item.Id" class="btn btn-success text-decoration-none" name="Id" style="color:White">Edit User</a>

                </div>
                </div>
        </div>

    }
}